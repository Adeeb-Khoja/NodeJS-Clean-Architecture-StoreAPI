{
    "compilerOptions": {
      "lib": ["es6"],
      "allowJs": true,
      "outDir": "build",
      "rootDir": "src",
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "target": "es2016", 
      "module": "commonjs", 
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true, 
      "strict": true, 
      "skipLibCheck": true
    }
  }